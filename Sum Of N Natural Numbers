package javaset1;

import java.util.Scanner;

public class SumOfNNaturalNum {

	public static void main(String[] args) {
		// Sum of n natural numbers
		
		int sum=0;
		
		System.out.println("Enter the value to find the sum of n natural numbers ");
		
		Scanner sc= new Scanner(System.in);
		int n=sc.nextInt();
		
		for(int i=0;i<=n;i++)
		{
			sum=sum+i;
		}
		System.out.println("The sum of given n natural numbers : "+sum);
	}

}

output:
Enter the value to find the sum of n natural numbers 
10
The sum of given n natural numbers : 55
