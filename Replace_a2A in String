package string;

public class Replace_a2A {

	public static void main(String[] args)
	{
		String s="payilagam";
		char c[]=new char[s.length()];
		
		for(int i=0;i<s.length();i++)
		{
			if(s.charAt(i)!='a')
				c[i]=s.charAt(i);
			else
				c[i]='A';
				
		}
		
		s=String.valueOf(c);
		System.out.println(s);
	}
}

output:
pAyilAgAm
