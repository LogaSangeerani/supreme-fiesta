package javaBasics;

import java.util.Scanner;

public class CompoundInterset {

	private static Scanner sc;
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub
    
		double PAmount,ROI,Time,FutureCI,CI;
		sc=new Scanner(System.in);
		
		System.out.println("enter principal amount");
		PAmount=sc.nextDouble();
		
		System.out.println("enter rate of interest");
		ROI=sc.nextDouble();
		
		System.out.println("enter time period in years");
		Time=sc.nextDouble();
		
		FutureCI= PAmount*(Math.pow((1+ROI/100),Time));
		CI=FutureCI-PAmount;
		
		System.out.println("The future CI is "+FutureCI);
		System.out.println("The CI ic "+CI);
		
		
		
	}

}
