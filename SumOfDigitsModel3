package javaBasics;

public class SumOfDigitsModel3 {

	public static void main(String[] args) {
		
		// (value%100)

				int box = 0;
				int value = 1234;
				
				while(value > 0)
				{
					int res = value % 100;
					value = value / 10;
					box = box + res;
				}
				
				System.out.println(box);

	}

}
