package patternpgm;

public class XPattern {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		int n=5;
		int a=n;
		for(int i=1;i<=n;i++)
		{
			for(int j=1;j<=n;j++)
			{
				if(i==j || j==a)
				{
					System.out.print("*");
				}
				else
				{
					System.out.print(" ");
				}
			}
			a--;
			System.out.println();
			
		}

	}

}

output:
*   *
 * * 
  *  
 * * 
*   *
