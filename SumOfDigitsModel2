package javaBasics;

public class SumOfDigitsModel2 {

	public static void main(String[] args) {
		
		//SumOfDigitsModel2
		
		// (value>=0) --> Infinite Loop

				int box = 0;
				int value = 1234;
				
				while(value >= 0)
				{
					int res = value % 10;
					value = value / 10;
					box = box + res;
				}
				
				System.out.println(box);

	}

}
